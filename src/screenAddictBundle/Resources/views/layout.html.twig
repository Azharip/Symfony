<!DOCTYPE HTML>
<html>
  <head>
    <meta charset="utf-8">
	{% block stylesheets %}
	    {#<link rel="stylesheet" href="{{ asset('css/style.css') }}">#}
        <link rel="stylesheet" href="{{ asset('css/material.min.css') }}">
        <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
