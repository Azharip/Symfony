    <script src="{{ asset('js/jquery.min.js') }}"></script>
    <script src="{{ asset('css/material.min.js') }}"></script>
    {#<script src="{{ asset('js/bootstrap.js') }}"></script>#}
    <title>{% block title %}screenAddict{% endblock %}</title>
  </head>
  <body>

    {% block body %}
        {% block top %}
            {#<div id="enteteg">#}
                {#<a href="{{ path('home')}}">screenAddict</a>#}
                <!-- Always shows a header, even in smaller screens. -->
                <div class="mdl-layout mdl-js-layout mdl-layout--fixed-header">
                  <header class="mdl-layout__header">
                    <div class="mdl-layout__header-row">
                      <!-- Title -->
                      <span class="mdl-layout-title">ScreenAddict</span>
                      <!-- Add spacer, to align navigation to the right -->
                      <div class="mdl-layout-spacer">

						  {% block searchbar %}
						  {% endblock %}

					  </div>
                      <!-- Navigation. We hide it in small screens. -->
                      <nav class="mdl-navigation mdl-layout--large-screen-only">
                        <a class="mdl-navigation__link" href="{{ path('home')}}">Accueil</a>
                        <a class="mdl-navigation__link" href="{{ path('user',{'id_ami': -1})}}">Profil</a>
                        <a class="mdl-navigation__link" href="">Link</a>
                        <a class="mdl-navigation__link" href="">Link</a>
                      </nav>
                    </div>
                  </header>
				  {% block drawer %}
				  {% endblock %}
                  <main class="mdl-layout__content">
                    <div class="page-content"><!-- Your content goes here -->{#</div>
                  </main>
                </div>
            </div>#}
        {% endblock %}
    {% endblock %}
  </body>
</html>
