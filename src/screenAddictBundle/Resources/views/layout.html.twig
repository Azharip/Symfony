<!DOCTYPE HTML>
<html>
<head>
	<meta charset="utf-8">
	{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('css/material.min.css') }}">
	<link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
	<link rel="stylesheet" href="{{ asset('css/stylesheet.css') }}">
	<link rel="stylesheet" href="{{ asset('css/font-awesome.min.css') }}">
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
	{% endblock %}
	<script src="{{ asset('js/jquery.min.js') }}"></script>
	<script src="{{ asset('css/material.min.js') }}"></script>
	<script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
	<title>{% block title %}screenAddict{% endblock %}</title>
</head>
<body>
	{% block top %}
	<div class="mdl-layout mdl-js-layout mdl-layout--fixed-header">
		<header class="mdl-layout__header">
			<div class="mdl-layout__header-row">
				<!-- Title -->
				<span class="mdl-layout-title">ScreenAddict</span>
				<!-- Add spacer, to align navigation to the right -->
				{% block searchbar %}
				{% endblock %}

				{% block switchamifilm %}
				{% endblock %}

				<div class="mdl-layout-spacer">
				</div>

				<!-- Navigation. We hide it in small screens. -->
				<nav class="mdl-navigation mdl-layout--large-screen-only">
					<a class="mdl-navigation__link" href="{{ path('home')}}">Accueil</a>
					<a class="mdl-navigation__link" href="{{ path('user',{'id_ami': -1})}}">Profil</a>
				</nav>
				{% block menu %}
				{% endblock %}
			</div>
		</header>

		<main class="mdl-layout__content">
			<div class="page-content">
				{% block body %}
				{% endblock %}
			</div>
		</main>
	</div>
	{% endblock %}
</body>
</html>
