				</div>
			</div>
			<br />
			<div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
				<div>
					{{ form_widget(regForm.mail, {'id': 'mail','attr':{'class': 'mdl-textfield__input'}}) }}
					{{ form_label(regForm.mail, 'E-mail', {'for':'sample-expandable','label_attr': {'class': 'mdl-textfield__label'}}) }}
				</div>
			</div>
			<br />

